<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="../css/style.css">

<meta charset="utf-8">
<title>Ishika's Calculator</title>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

 <!-- Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" rel="stylesheet">


</head>
<body>
	

	<%  newListItems.forEach(function(calculator){ %>

		<form action="" method="post">
			<div class="calculator" style="color:black; font-size: 25px; justify-content: center;">
				<p class="cal"><%=  calculator.name  %></p> 
			</div>
		
		</form>
		

	  <%  }) %>
	  
	
     
<div class="container">

<div class="row justify-content-center p-5">
	<span class="border p-5 ">
<form name="my_calculator" action="/" method="post">
	<div class="text-center pb-3">
	<input type="text" name="answ">
   </div>



	<div class="row p-1" >
		<div class="col-3">
			<input type="button" value=" C " onclick="my_calculator.answ.value = '' ">
		</div>

		<div class="col-3">
			<input type="button" value=" 0 " onclick="my_calculator.answ.value += ' 0 ' ">
		</div>
		
		<div class="col-3">
			<input type="button" name ="answer" value=" = " onclick="my_calculator.answ.value =  eval(my_calculator.answ.value.replace(/\s/g, ''))">
		</div>

		<div class="col-3">
			<input type="button" value=" / " onclick="my_calculator.answ.value += ' / ' ">
		</div>

	</div> <!--row-->

	<div class="row p-1">
		<div class="col-3">
			<input type="button" value=" 1 " onclick="my_calculator.answ.value += ' 1 ' ">
		</div>

		<div class="col-3">
			<input type="button" value=" 2 " onclick="my_calculator.answ.value += ' 2 ' ">	
		</div>

		<div class="col-3">
			<input type="button" value=" 3 " onclick="my_calculator.answ.value += ' 3 ' ">	
		</div>

		<div class="col-3">
		<input type="button" value=" * " onclick="my_calculator.answ.value += ' * ' ">
		</div>

	</div> <!--row-->

	<div class="row p-1">
		<div class="col-3">
			<input type="button" value=" 4 " onclick="my_calculator.answ.value += ' 4 ' ">
		</div>

		<div class="col-3">
			<input type="button" value=" 5 " onclick="my_calculator.answ.value += ' 5 ' ">		
		</div>

		<div class="col-3">
			<input type="button" value=" 6 " onclick="my_calculator.answ.value += ' 6 ' ">	
        </div>

		<div class="col-3">
			<input type="button" value=" - " onclick="my_calculator.answ.value += ' - ' ">
	    </div>
	</div> <!--row-->

	<div class="row p-1">
		<div class="col-3">
			<input type="button" value=" 7 " onclick="my_calculator.answ.value += ' 7 ' ">
		</div>

		<div class="col-3">
			<input type="button" value=" 8 " onclick="my_calculator.answ.value += ' 8 ' ">	
		</div>

	<div class="col-3">
		<input type="button" value=" 9 " onclick="my_calculator.answ.value += ' 9 ' ">	
	</div>

	<div class="col-3">
		<input type="button" value=" + " onclick="my_calculator.answ.value += ' + ' ">
	</div>

	</div>


</form>
</span>

</div> 
</div> 


</body>
</html>



